<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="outputdebugstring.ui.internal.DebugView"
            icon="icons/e16/view.png"
            id="outputdebugstring.ui.DebugView"
            name="%view.name"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:outputdebugstring.ui.DebugView">
         <command
               commandId="outputdebugstring.ui.CaptureCommand"
               style="toggle">
         </command>
         <separator
               name="outputdebugstring.ui.separator1"
               visible="true">
         </separator>
         <command
               commandId="org.eclipse.ui.edit.clear"
               style="push">
         </command>
         <command
               commandId="outputdebugstring.ui.AutoscrollCommand"
               style="radio">
         </command>
         <command
               commandId="outputdebugstring.ui.TimeFormatCommand"
               style="toggle">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="outputdebugstring.ui.internal.handlers.DebugViewToggleHandler:outputdebugstring.ui.internal.CaptureToggler"
            id="outputdebugstring.ui.CaptureCommand"
            name="Capture">
            <state
              class="org.eclipse.ui.handlers.RegistryToggleState:true"
              id="org.eclipse.ui.commands.toggleState">
            </state>
      </command>
      <command
            defaultHandler="outputdebugstring.ui.internal.handlers.DebugViewToggleHandler:outputdebugstring.ui.internal.TimeFormatToggler"
            id="outputdebugstring.ui.TimeFormatCommand"
            name="Time format">
         <state
               class="org.eclipse.ui.handlers.RegistryToggleState:true"
               id="org.eclipse.ui.commands.toggleState">
         </state>
      </command>
      <command
            defaultHandler="outputdebugstring.ui.internal.handlers.DebugViewToggleHandler:outputdebugstring.ui.internal.AutoScrollToggler"
            id="outputdebugstring.ui.AutoscrollCommand"
            name="Autoscroll">
         <state
               class="org.eclipse.ui.handlers.RegistryToggleState:true"
               id="org.eclipse.ui.commands.toggleState">
         </state>
      </command>
      <command
            id="org.eclipse.ui.edit.clear"
            name="Clear">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="outputdebugstring.ui.CaptureCommand"
            icon="icons/e16/search.png">
      </image>
      <image
            commandId="outputdebugstring.ui.TimeFormatCommand"
            icon="icons/e16/clock.png">
      </image>
      <image
            commandId="outputdebugstring.ui.AutoscrollCommand"
            icon="icons/e16/autoscroll.png">
      </image>
      <image
            commandId="org.eclipse.ui.edit.clear"
            icon="icons/e16/clear.png">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="outputdebugstring.ui.internal.handlers.ClearHandler"
            commandId="org.eclipse.ui.edit.clear">
         <!--enabledWhen>
            <with
                  variable="activePart">
               <adapt
                     type="outputdebugstring.ui.Clearable">
               </adapt>
            </with>
         </enabledWhen-->
      </handler>
   </extension>

</plugin>
